@using LU.Prase.Entities.Enums
@using LU.Prase.Machines.Dto
@using LU.Prase.Web.Models.Roles
@using LU.Prase.Web.Models.Common.Modals
@model MachineDto
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("EditRole")))
<form name="RoleEditForm" role="form" class="form-horizontal">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="modal-body">
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="machinename">@L("MachineName")</label>
            <div class="col-md-9">
                <input id="machinename" class="form-control" type="text" name="Name" value="@Model.Name" required maxlength="32" minlength="2">
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="note">Notes</label>
            <div class="col-md-9">
                <input id="note" type="text" class="form-control" name="notes" value="@Model.Notes" required maxlength="32" minlength="2">
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label" for="SectionId-Edit">Section</label>
            <select name="SectionId" id="SectionId-Edit" class="form-control">
                @foreach (var sections in Model.AllSections)
                {
                    if (Model.Section.Id == sections.Id)
                    {
                        <option value="@sections.Id" selected>
                            @sections.Name
                        </option>
                    }
                    else
                    {
                        <option value="@sections.Id">
                            @sections.Name
                        </option>
                    }
                }
            </select>
        </div>
        <div class="form-group row">
            <label class="col-md-3 col-form-label" for="machineStates">@L("MachineName")</label>
            <select asp-items="@Html.GetEnumSelectList(typeof(MachineStates))" id="machineStates" name="MachineStates" value="" class="form-control selectpicker w-100" data-size="5" data-live-search="true" data-style="btn-default">
            </select>
        </div>
    </div>
    @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>

<script src="~/view-resources/Views/Machines/_EditModal.js" asp-append-version="true"></script>
