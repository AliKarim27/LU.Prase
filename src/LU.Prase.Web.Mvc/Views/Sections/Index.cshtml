@using LU.Prase.Authorization
@using LU.Prase.Web.Startup
@{
    ViewBag.Title = L("Sections");
    ViewBag.CurrentPageName = PageNames.Sections;


    var createSectionPermission = await PermissionChecker.IsGrantedAsync(PermissionNames.Pages_CreateSections);
    var editSectionPermission = await PermissionChecker.IsGrantedAsync(PermissionNames.Pages_EditSections);
    var deleteSectionPermission = await PermissionChecker.IsGrantedAsync(PermissionNames.Pages_DeleteSections);
}
@section scripts
{
    <environment names="Development">
        <script src="~/view-resources/Views/Sections/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/Sections/Index.min.js" asp-append-version="true"></script>
    </environment>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Sections")</h1>
            </div>
            @if (createSectionPermission)
            {
                <div class="col-sm-6">
                    <a href="javascript:;" data-toggle="modal" data-target="#SectionCreateModal" class="btn bg-blue float-sm-right">
                        <i class="fa fa-plus-square"></i>
                        @L("Create")
                    </a>
                </div>
            }
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="SectionsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>@L("Name")</th>
                                        <th>@L("Description")</th>
                                        <th>@L("Department")</th>
                                        <th>@L("Responsibles")</th>
                                        @if (editSectionPermission || deleteSectionPermission)
                                        {
                                            <th style="width: 150px">@L("Actions")</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@if (createSectionPermission)
{
    @await Html.PartialAsync("~/Views/Sections/_CreateModal.cshtml")
}
@if (editSectionPermission)
{
    <div class="modal fade" id="SectionEditModal" tabindex="-1" role="dialog" aria-labelledby="SectionEditModalLabel" data-backdrop="static">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
            </div>
        </div>
    </div>
}
